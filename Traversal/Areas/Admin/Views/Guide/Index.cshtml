@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h1>Rehber Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" class="rounded" height="50" width="50"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Description</td>
            
            @{
                if(item.Status){
                    <td><a href="/Admin/Guide/ChangeStatusToFalse/@item.GuideID" class="btn btn-outline-danger">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Admin/Guide/ChangeStatusToTrue/@item.GuideID" class="btn btn-outline-success">Aktif Yap</a></td>
                }
            }
           
            <td><a href="/Admin/Guide/EditGuide" class="btn btn-outline-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-success">Yeni Rehber Girişi</a>

